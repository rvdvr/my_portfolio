header.header
  .header-top
    .header-top__socials
      ul.socials__list
        li.socials__item
          a(href='https://vk.com/ra_dar' target='_blank').socials__link
            +icon('vk')
        li.socials__item
          a(href='https://github.com/rvdvr' target='_blank').socials__link
            +icon('github')
        li.socials__item
          a(href='https://www.facebook.com/avradantsev' target='_blank').socials__link
            +icon('fb')
  nav.header-nav
    ul.header-nav__list
      li.header-nav__item
        a(href='works.html').header-nav__link Мои работы
      li.header-nav__item
        a(href='about.html').header-nav__link Обо мне
      li.header-nav__item
        a(href='blog.html').header-nav__link Блог
      li.header-nav__item
        a(href='index.html').header-nav__link Авторизация
