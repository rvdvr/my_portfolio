      .burger-icon
        .burger-container
          .burger-bun-top
          .burger-filling
          .burger-bun-bot
  .header-name_custom
    +icon('blog_header')
  .header-user
    .user__avatar
      img(src='assets/img/avatar.png').user__avatar-img
    .user__title
      h1.user__title__text.title-lines Блог
    h2.user__disc Статьи, которые я написал
  .header__bottom
    .btn__down
      +icon('portf_arrow_down')
  .header__triangles
    svg(width="100%" height="160px" viewBox='0 0 100 160' preserveAspectRatio='none').header__triangles-svg
      polygon(fill="#fff" points="0,0 50,160 100,0 100,160 0,160")
